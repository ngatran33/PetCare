<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/userPrfile_img"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/userTvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/userPrfile_img"
        android:text="@string/user"
        android:textSize="25sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/green"
        android:id="@+id/user_img_ol"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/userTvUser"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-15dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/userPrfile_img"
        android:layout_toEndOf="@id/userPrfile_img"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/red"
        android:id="@+id/user_img_off"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/userTvUser"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-15dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/userPrfile_img"
        android:layout_toEndOf="@id/userPrfile_img"/>




</RelativeLayout>